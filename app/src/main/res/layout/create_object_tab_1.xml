<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:id="@+id/owner_tab"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnSaveItem">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/owner_name"
                android:id="@+id/owner_name_label"
                android:layout_column="0"
                android:layout_weight="0.1"
                android:textSize="@dimen/abc_text_size_small_material" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/owner_name"
                android:layout_column="3"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/owner_phone"
                android:id="@+id/owner_phone_label"
                android:layout_column="0"
                android:layout_weight="0.1"
                android:textSize="@dimen/abc_text_size_small_material" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/owner_phone"
                android:inputType="phone"
                android:layout_column="3"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/other_contacts"
                android:id="@+id/textView"
                android:layout_column="0"
                android:layout_weight="0.1"
                android:textSize="@dimen/abc_text_size_small_material" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/other_contacts"
                android:layout_column="3"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>
</RelativeLayout>